{
  "kind": "collectionType",
  "collectionName": "gridly_configs",
  "info": {
    "singularName": "gridly-config",
    "pluralName": "gridly-configs",
    "displayName": "Gridly Configuration"
  },
  "options": {
    "draftAndPublish": false,
    "comment": ""
  },

  "pluginOptions": {
    "content-manager": { 
      "visible": false
    },

    "content-type-builder": {
      "visible": false
    }
  },

  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true,
      "maxLength": 50,
      "minLength": 1
    },
    "gridly-api-key": {
      "type": "text",
      "required": true,
      "private": true
    },
    "gridly-view-id": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "maxLength": 200
    },
    "is-active": {
      "type": "boolean",
      "default": true
    },
    "created_by": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "admin::user"
    }
  }
} 